<Window x:Name="ui_main_xrtoolkit" x:Class="xrToolkit.ui_main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xrToolkit"
        mc:Ignorable="d"
        Title="xrToolkit v1.0" Height="450" Width="500">
    <Grid>
        <TabControl>
            <TabItem HorizontalAlignment="Center" Height="20" Header="Tools" VerticalAlignment="Center" Width="54">
                <Grid>
                    <Button Content="Compile level&#xA;(SkyLoader)" HorizontalAlignment="Left" Margin="41,99,0,0" VerticalAlignment="Top" Height="61" Width="149" Background="#FFEFEFEF" Cursor="Hand" Click="Button_Click_2"/>
                    <Label Content="Third party tools" HorizontalAlignment="Left" Margin="20,8,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
                    <Button Content="Icon Editor&#xD;&#xA;(SIE)" HorizontalAlignment="Left" Margin="41,234,0,0" VerticalAlignment="Top" Height="50" Width="149" Background="#FFEFEFEF" Cursor="Hand"/>
                    <Separator Margin="20,47,20,0" VerticalAlignment="Top" Height="8"/>
                    <Label Content="SDK / Mapping" HorizontalAlignment="Left" Margin="41,68,0,0" VerticalAlignment="Top"/>
                    <Label Content="Textures" HorizontalAlignment="Left" Margin="41,203,0,0" VerticalAlignment="Top"/>
                    <Label Content="Sounds" HorizontalAlignment="Left" Margin="247,203,0,0" VerticalAlignment="Top"/>
                    <Button Content="OGG Comments Editor&#xD;&#xA;(SAVAndT)" HorizontalAlignment="Left" Margin="247,234,0,0" VerticalAlignment="Top" Height="72" Width="149" Background="#FFEFEFEF" Cursor="Hand"/>
                    <Button Content="THM Editor" HorizontalAlignment="Left" Margin="41,298,0,0" VerticalAlignment="Top" Height="50" Width="149" Background="#FFEFEFEF" Cursor="Hand"/>
                    <Label Content="Animations" HorizontalAlignment="Left" Margin="247,68,0,0" VerticalAlignment="Top"/>
                    <Button Content="Animation File Editor&#xD;&#xA;(OMF)" HorizontalAlignment="Left" Margin="247,99,0,0" VerticalAlignment="Top" Height="61" Width="149" Background="#FFEFEFEF" Cursor="Hand"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_gamedata" HorizontalAlignment="Center" Height="20" Header="Gamedata unpacker" VerticalAlignment="Top" Width="123" Margin="0,-1,0,0">
                <Grid>
                    <Label Content="Database files input path" HorizontalAlignment="Left" Margin="33,28,0,0" VerticalAlignment="Top"/>
                    <Label Content="Unpacked files output path" HorizontalAlignment="Left" Margin="33,105,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="input_db_input" HorizontalAlignment="Left" Margin="38,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="22"/>
                    <TextBox x:Name="input_db_output" HorizontalAlignment="Left" Margin="38,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="23"/>
                    <Button x:Name="btn_input_db" Content="Set" HorizontalAlignment="Left" Margin="400,60,0,0" VerticalAlignment="Top" Width="46" Height="22" Click="Button_Click_1" Cursor="Hand" Background="WhiteSmoke"/>
                    <Button x:Name="btn_output_db" Content="Set" HorizontalAlignment="Left" Margin="400,133,0,0" VerticalAlignment="Top" Width="46" Height="23" Click="btn_output_db_Click" Cursor="Hand" Background="WhiteSmoke"/>
                    <Label Content="Settings" HorizontalAlignment="Left" Margin="40,183,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.532,-1"/>
                    <RadioButton Content="CS/CoP" HorizontalAlignment="Left" Margin="51,214,0,0" VerticalAlignment="Top" GroupName="game_unpack" Cursor="Hand" IsChecked="True"/>
                    <RadioButton Content="SoC (WW)" HorizontalAlignment="Left" Margin="51,234,0,0" VerticalAlignment="Top" GroupName="game_unpack" Cursor="Hand"/>
                    <RadioButton Content="SoC (Ru)" HorizontalAlignment="Left" Margin="51,254,0,0" VerticalAlignment="Top" GroupName="game_unpack" Cursor="Hand"/>
                    <Button Content="Unpack" Margin="0,0,37,29" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="132" Click="Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_map" Header="Level decompiler">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160*"/>
                        <ColumnDefinition Width="87*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Level name:" HorizontalAlignment="Left" Margin="40,32,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="input_map_name" Margin="40,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" HorizontalAlignment="Left" Width="194" AllowDrop="False"/>
                    <CheckBox x:Name="check_lods_enabled" Content="With LODs" HorizontalAlignment="Left" Margin="40,129,0,0" VerticalAlignment="Top" IsChecked="False" Cursor="Hand"/>
                    <Label Content="Settings" HorizontalAlignment="Left" Margin="40,101,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="btn_decompile_map" Content="Decompile" Margin="0,0,38,46" RenderTransformOrigin="-0.746,0.606" HorizontalAlignment="Right" Width="141" Height="41" VerticalAlignment="Bottom" Click="btn_decompile_map_Click" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_converter" Header="Converter">
                <Grid>
                    <TabControl>
                        <TabItem Header="OGF to OBJECT">
                            <Grid>
                                <Label Content="Input path:" HorizontalAlignment="Left" Margin="35,29,0,0" VerticalAlignment="Top"/>
                                <TextBox x:Name="input_ogfobj_input" HorizontalAlignment="Left" Margin="35,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="361" Height="24" AllowDrop="False"/>
                                <Label Content="Output path:" HorizontalAlignment="Left" Margin="35,107,0,0" VerticalAlignment="Top"/>
                                <TextBox x:Name="input_ogfobj_output" HorizontalAlignment="Left" Margin="35,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="361" Height="24" AllowDrop="False"/>
                                <Button x:Name="btn_ogfobj_convert" Content="Convert" HorizontalAlignment="Center" Margin="0,304,0,0" VerticalAlignment="Top" Height="35" Width="176" Click="btn_ogfobj_convert_Click_2"/>
                                <Button x:Name="btn_input_ogfobj" Content="Set" HorizontalAlignment="Left" Margin="401,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.05,-0.349" Width="46" Height="24" Click="btn_input_ogfobj_Click"/>
                                <Button x:Name="btn_output_ogfobj" Content="Set" HorizontalAlignment="Left" Margin="401,138,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.05,-0.599" Click="btn_output_ogfobj_Click" Width="46" Height="24"/>
                                <TextBox x:Name="status_ogfobj" HorizontalAlignment="Left" Margin="35,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="412" Height="92" IsEnabled="False"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="OMF to SKLS">
                            <Grid/>
                        </TabItem>
                        <TabItem HorizontalAlignment="Center" Height="20" Header="DDS to TGA" VerticalAlignment="Top" Width="76" Margin="0,-1,0,0"/>
                        <TabItem HorizontalAlignment="Center" Height="20" Header="OGG to WAV" VerticalAlignment="Top" Width="84" Margin="0,-1,0,0">
                            <Grid/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
